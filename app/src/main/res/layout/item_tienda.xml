<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="18dp"
    android:padding="8dp"
    app:cardCornerRadius="25dp"
    app:strokeColor="@color/azulCielo"
    app:strokeWidth="2dp"
    app:cardBackgroundColor="@color/white">

    <ImageView
        android:id="@+id/ImagenTienda"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/TXTView_NombreTienda"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:text="Nombre de la tienda"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TXTView_DescripcionTienda"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="45dp"
        android:layout_marginTop="55dp"
        android:text="Descripcion"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TXTView_DireccionTienda"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="45dp"
        android:layout_marginTop="85dp"
        android:text="DirecciÃ³n"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TXTView_ExtraTienda"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="45dp"
        android:layout_marginTop="115dp"
        android:text="Extra"
        android:textColor="@color/black"
        android:textSize="14sp" />

</com.google.android.material.card.MaterialCardView>